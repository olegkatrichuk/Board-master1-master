@using Microsoft.AspNetCore.Http.Extensions
@using Org.BouncyCastle.Asn1.Ocsp
@model IEnumerable<Board.Models.Advert>


@{
    ViewData["Title"] = "List";
    //var photoPath =("~/images/" + (Model.PhotoPath ?? "noimage.jpg"));
}

<h1>Мои обьявления</h1>

<p>
    <a asp-action="List"></a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductIsNew)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsNegotiatedPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoPath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductIsNew)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsNegotiatedPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @{ var photoPath = "~/images/" + (item.PhotoPath ?? "noimage.jpg");}
                    <img class="rounded" src="@photoPath" asp-append-version="true" style="width: 100px; height: 100px" />
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit",new { id = item.Id }) |
                    @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id }) 
                    @*<a href='@Url.Action("ConvertToPdf", "Home")'>PDF</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
